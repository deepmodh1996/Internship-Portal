	<div id="welcome">
		<h2>Simply Login ...</h2>
		<div class="content row">
			<div class="col-md-6 col-md-offset-3"><div class="row">
				<!-- <form class="form-horizontal" action="home.html"> -->
				<%= form_tag sessions_path, :class => 'form-horizontal' do %>
					<div class="form-group">
						<!-- <label for="inputEmail" class="col-md-3 control-label">LDAP Login</label> -->
						<%= label_tag :email, 'LDAP Login', class: 'col-md-3 control-label' %>
						<div class="col-md-9">
							<!-- <input type="email" class="form-control" id="inputEmail" placeholder="Email"> -->
						    <%= text_field_tag :email, params[:email], placeholder: 'Email', class: 'form-control' %>
						</div>
					</div>
					<div class="form-group">
						<!-- <label for="inputPassword" class="col-md-3 control-label">Password</label> -->
						<%= label_tag :password, nil, class: 'col-md-3 control-label' %>
						<div class="col-md-9">
							<!-- <input type="password" class="form-control" id="inputPassword" placeholder="Password"> -->
							<%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-offset-3 col-md-9">
							<%= submit_tag "Log in", class: 'btn btn-success btn-lg' %>
							<!-- <button type="submit" class="btn btn-success btn-lg">Sign in</button> -->
						</div>
					</div>
				<% end %>
				<!-- </form> -->
			</div></div>
		</div>
